<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_namaBarangTransaksi"
        android:text="Nama Barang"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_kodeBarangTransaksi"
        android:layout_below="@+id/tv_namaBarangTransaksi"
        android:text="Kode Barang"
        android:textSize="8dp"
        android:textColor="@color/purple_200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/img_barang_plus"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_plus_blue"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:layout_marginRight="10dp"/>
</RelativeLayout>